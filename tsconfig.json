{
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true // Ensure default import compatibility
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts",
    "src/__mocks__"
  ]
}
