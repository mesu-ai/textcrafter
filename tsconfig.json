{
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true // Ensure default import compatibility
  },
  "include": ["src", "jest.d.ts", "**/*.ts", "**/*.tsx"],
}
